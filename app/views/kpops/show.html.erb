<%- model_class = Kpop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:group) %>:</strong></dt>
  <dd><%= @kpop.group %></dd>
  <dt><strong><%= model_class.human_attribute_name(:leader) %>:</strong></dt>
  <dd><%= @kpop.leader %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birth) %>:</strong></dt>
  <dd><%= @kpop.birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:member) %>:</strong></dt>
  <dd><%= @kpop.member %></dd>
  <dt><strong><%= model_class.human_attribute_name(:famous) %>:</strong></dt>
  <dd><%= @kpop.famous %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exist) %>:</strong></dt>
  <dd><%= @kpop.exist %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              kpops_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_kpop_path(@kpop), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              kpop_path(@kpop),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
