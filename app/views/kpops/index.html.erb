<%- model_class = Kpop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:group) %></th>
      <th><%= model_class.human_attribute_name(:leader) %></th>
      <th><%= model_class.human_attribute_name(:birth) %></th>
      <th><%= model_class.human_attribute_name(:member) %></th>
      <th><%= model_class.human_attribute_name(:famous) %></th>
      <th><%= model_class.human_attribute_name(:exist) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @kpops.each do |kpop| %>
      <tr>
        <td><%= link_to kpop.id, kpop_path(kpop) %></td>
        <td><%= kpop.group %></td>
        <td><%= kpop.leader %></td>
        <td><%= kpop.birth %></td>
        <td><%= kpop.member %></td>
        <td><%= kpop.famous %></td>
        <td><%= kpop.exist %></td>
        <td><%=l kpop.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_kpop_path(kpop), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      kpop_path(kpop),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_kpop_path,
            :class => 'btn btn-primary' %>
